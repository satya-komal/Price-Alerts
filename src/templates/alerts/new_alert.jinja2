{% extends "base.jinja2" %}
{% block content %}
    <div class="page-header">
          <h1>Create Alert</h1>
    </div>
    <div class="form-size">
          <form method="post">
              <div class="form-group">
                  <label for="name">Alert/Item/Name</label>
                  <input type="text" class="form-control" id="name" name="name" placeholder="Name">
              </div>
               <div class="form-group">
                  <label for="url">URL</label>
                  <input type="text" class="form-control" id="url" name="url" placeholder="http://">
              </div>
              <div class="form-group">
                  <label for="price_limit">Alert limit</label>
                  <input type="text" class="form-control" id="price_limit" name="price_limit" placeholder="45" aria-describedby="priceLimitBlock">
                  <p id="priceLimitBlock" class="help-block">Email will be sent when the price reaches under this value</p>
                  <button type="submit" class="btn btn-default">Create</button>
              </div>
          </form>
    </div>

{% endblock %}